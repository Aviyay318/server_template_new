<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class name="com.app.entities.UserEntity" table="users" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="firstName" type="java.lang.String" column="first_name"/>
        <property name="lastName" type="java.lang.String" column="last_name"/>
        <property name="username" type="java.lang.String" column="username"/>
        <property name="age" type="java.lang.Integer" column="age"/>
        <property name="score" type="int" column="score"/>
        <property name="loginTime" type="java.util.Date" column="login_time"/>
        <property name="password" type="java.lang.String" column="password"/>
        <property name="email" type="java.lang.String" column="email"/>
        <property name="otp" type="java.lang.String" column="otp"/>
        <property name="gender" type="java.lang.String" column="gender"/>
    </class>


    <class name="com.app.entities.ExerciseHistoryEntity" table="exercise_history" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="userId" class="com.app.entities.UserEntity" column="userId"/>
        <property name="exercise" type="java.lang.String" column="exercise"/>
        <property name="isCorrectAnswer" type="boolean" column="is_correct_answer"/>
        <many-to-one name="islands" column="island" class="com.app.entities.IslandsEntity"/>
        <property name="level" type="int" column="level"/>
        <many-to-one name="questionType" column="question_type_id" class="com.app.entities.QuestionTypeEntity"/>
        <property name="answer" type="java.lang.String" column="answer"/>
        <property name="createdAt" column="createdAt" type="date"/>
        <property name="solutionTime" type="java.lang.Double" column="solution_time"/>
<property name="exerciseId" type="int" column="exerciseId"/>
    </class>

    <class name="com.app.entities.QuestionTypeEntity" table="question_type" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

     <property name="name" column="name" type="java.lang.String"/>
    </class>

    <class name="com.app.entities.ObjectsEntity" table="objects" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="singularName" column="singular_name" type="java.lang.String"/>
        <property name="pluralName" column="plural_name" type="java.lang.String"/>
        <property name="svg" column="svg" type="java.lang.String"/>
    </class>


    <class name="com.app.entities.ChildrenNameEntity" table="children_name" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="java.lang.String"/>
        <property name="gender" column="gender" type="java.lang.String"/>
    </class>

<!--    <class name="com.app.entities.TemplateEntity" table="templates" lazy="false">-->
<!--        <id name="id" type="int" column="id">-->
<!--            <generator class="native"/>-->
<!--        </id>-->
<!--        <property name="type" column="type" type="java.lang.String"/>-->
<!--        <property name="template" column="template" type="java.lang.String"/>-->
<!--        <property name="isSingular" type="boolean" column="is_singular"/>-->
<!--    </class>-->

    <class name="com.app.entities.IslandsEntity" table="islands" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
       <property name="name" column="name" type="java.lang.String"/>
        <property name="score" type="int" column="score"/>
    </class>

    <class name="com.app.entities.LevelsEntity" table="levels" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
       <many-to-one name="user" column="userId" class="com.app.entities.UserEntity"/>
       <many-to-one name="island" column="islandId" class="com.app.entities.IslandsEntity"/>
        <property name="level" column="level" type="int"/>
        <property name="highestLevel" column="highestLevel" type="int"/>
    </class>


</hibernate-mapping>
