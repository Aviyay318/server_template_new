<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class name="com.app.entities.UserEntity" table="users" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="firstName" type="java.lang.String" column="first_name"/>
        <property name="lastName" type="java.lang.String" column="last_name"/>
        <property name="username" type="java.lang.String" column="username"/>
        <property name="age" type="java.lang.Integer" column="age"/>
        <property name="password" type="java.lang.String" column="password"/>
        <property name="email" type="java.lang.String" column="email"/>
        <property name="otp" type="java.lang.String" column="otp"/>
        <property name="gender" type="java.lang.String" column="gender"/>
    </class>


    <class name="com.app.entities.ExerciseHistoryEntity" table="exercise_history" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="userId" class="com.app.entities.UserEntity" column="userId"/>
        <property name="exercise" type="java.lang.String" column="exercise"/>
        <property name="isCorrectAnswer" type="boolean" column="is_correct_answer"/>
        <property name="level" type="int" column="level"/>
        <many-to-one name="questionType" column="question_type_id" class="com.app.entities.QuestionTypeEntity"/>
        <property name="answer" type="java.lang.String" column="answer"/>
        <property name="solutionTime" type="java.lang.Double" column="solution_time"/>

    </class>

    <class name="com.app.entities.QuestionTypeEntity" table="question_type" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

     <property name="name" column="name" type="java.lang.String"/>
    </class>


</hibernate-mapping>
